<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="8">

        <LinearLayout
            android:id="@+id/lin_shouye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button_shouye"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:background="@drawable/bottom_tab_home_selected" />

            <TextView
                android:id="@+id/text_shouye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12dp"
                android:textColor="#ff3333"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_fenlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_fenlei"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:background="@drawable/bottom_tab_classify_normal" />

            <TextView
                android:id="@+id/text_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="分类" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_gouwuche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_gouwuche"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:background="@drawable/bottom_tab_shopping_normal" />

            <TextView
                android:id="@+id/text_gouwuche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="购物车" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_my"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:background="@drawable/bottom_tab_user_normal" />

            <TextView
                android:id="@+id/text_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="我的" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
