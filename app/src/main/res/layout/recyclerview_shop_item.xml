<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkBox_selecter_RV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/check_normal_3"
            />

        <RelativeLayout
            android:id="@+id/RL_shop_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/image_shop_"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bb" />

            <TextView
                android:id="@+id/tv_shopping_titler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image_shop_"
                android:text="是大法官话费第三个地方所规dfsd的" />

            <TextView
                android:id="@+id/tv_shopping_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_shop_"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image_shop_"
                android:text="￥0.00" />

            <TextView
                android:id="@+id/tv_shopping_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_shopping_price"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_shopping_price"
                android:text="数量：1" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_shopping_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="100dp"
            android:text="购买数量" />

        <Button
            android:id="@+id/bt_shopping_reduce"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="--"
            android:background="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_shopping_nums"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="1"
            android:textSize="12sp"  />

        <Button
            android:id="@+id/bt_shopping_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="+"
            android:background="#fff"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
